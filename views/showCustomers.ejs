<%- include('./partial/head') %>
<div class="container">
    <h1>Data Customers</h1>
    <br>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">license plate</th>
                <th scope="col">email</th>
                <th scope="col">add Product</th>
                <th scope="col">History</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <%  customers.forEach(customer =>{%>
            <tr>
                <td><%= customer.id%></td>
                <td><%= customer.firstName%></td>
                <td><%= customer.lastName%></td>
                <td><%= customer.platNo%></td>
                <td><%= customer.email%></td>
                <!-- <td><button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add
                        Product</button></td> -->
                <td><a href="/customers/<%=customer.id%>/add-product">Add Product</a></td>
                <td><a href="/customers/<%=customer.id%>/history">History</a></td>
                <td><a href="/customers/edit/<%=customer.id%>">edit</a> |
                    <a href="customers/delete/<%=customer.id%>"
                        onclick="return confirm('Delete this customer?')">delete</a>
                </td>
            </tr>
            <%})%>
        </tbody>
    </table>
</div>

